^{courseHeader}

<div class="row">
  <div class="col-sm-4 col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-gear fa-lg fa-fw">
          _{MsgCourseSettings}

      <ul class="nav nav-pills nav-stacked">
        <li :isTabGeneral tabName:.active>
          <a href="@{CourseSettingsGeneralR cid}">
            <i class="fa fa-book fa-lg fa-fw">
            _{MsgCourseSettingsGeneral}
        <li :isTabStaff tabName:.active>
          <a href="@{CourseSettingsStaffR cid}">
            <i class="fa fa-users fa-lg fa-fw">
            _{MsgCourseSettingsStaff}
        <li :isTabGamification tabName:.active>
          <a href="@{CourseSettingsGamificationR cid}">
            <i class="fa fa-gamepad fa-lg fa-fw">
            _{MsgCourseSettingsGamification}

  <div class="col-sm-8 col-md-9">
    ^{settingsTab}
